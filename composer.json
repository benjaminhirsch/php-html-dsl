{
    "name": "benjaminhirsch/php-html-dsl",
    "description": "A library which provides the ability to generate DOM elements using statically typed HTML builders.",
    "license": "MIT",
    "type": "libary",
    "authors": [
        {
            "name": "Benjamin Hirsch",
            "homepage": "https://www.benjaminhirsch.net",
            "email": "mail@benjaminhirsch.net"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "BenjaminHirsch\\Html\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BenjaminHirsch\\Html\\Test\\": "test"
        },
        "files": ["src/functions.php"]
    },
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^11.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "scripts": {
        "cscheck": "phpcs",
        "csfix": "phpcbf",
        "phpstan": "phpstan",
        "phpunit": "phpunit"
    }
}
